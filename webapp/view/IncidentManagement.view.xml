<mvc:View controllerName="com.kaar.ehsmportal.controller.IncidentManagement"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="Incident Management" showNavButton="true" navButtonPress="onNavBack">
        <content>
            <Table id="incidentTable" inset="false" items="{
                path: '/incidentSet',
                filters: [{path: 'EmployeeId', operator: 'EQ', value1: '00000001'}]
            }">
                <columns>
                    <Column><Text text="Incident ID" /></Column>
                    <Column><Text text="Plant" /></Column>
                    <Column><Text text="Description" /></Column>
                    <Column><Text text="Category" /></Column>
                    <Column><Text text="Priority" /></Column>
                    <Column><Text text="Status" /></Column>
                    <Column><Text text="Date" /></Column>
                    <Column><Text text="Created By" /></Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{IncidentId}" />
                            <Text text="{Plant}" />
                            <Text text="{IncidentDescription}" />
                            <Text text="{IncidentCategory}" />
                            <Text text="{IncidentPriority}" />
                            <Text text="{IncidentStatus}" />
                            <Text text="{path: 'IncidentDate', type: 'sap.ui.model.type.Date', formatOptions: {style: 'medium'}}" />
                            <Text text="{CreatedBy}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
