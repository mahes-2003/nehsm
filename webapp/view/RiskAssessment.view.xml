<mvc:View controllerName="com.kaar.ehsmportal.controller.RiskAssessment"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="Risk Assessment" showNavButton="true" navButtonPress="onNavBack">
        <content>
            <Table id="riskTable" inset="false" items="{
                path: '/RISKSet',
                filters: [{path: 'EmployeeId', operator: 'EQ', value1: '00000001'}]
            }">
                <columns>
                    <Column><Text text="Risk ID" /></Column>
                    <Column><Text text="Plant" /></Column>
                    <Column><Text text="Description" /></Column>
                    <Column><Text text="Category" /></Column>
                    <Column><Text text="Severity" /></Column>
                    <Column><Text text="Mitigation" /></Column>
                    <Column><Text text="Likelihood" /></Column>
                    <Column><Text text="Created By" /></Column>
                    <Column><Text text="Date" /></Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{RiskId}" />
                            <Text text="{Plant}" />
                            <Text text="{RiskDescription}" />
                            <Text text="{RiskCategory}" />
                            <Text text="{RiskSeverity}" />
                            <Text text="{MitigationMeasures}" />
                            <Text text="{Likelihood}" />
                            <Text text="{CreatedBy}" />
                            <Text text="{path: 'RiskIdentificationDate', type: 'sap.ui.model.type.Date', formatOptions: {style: 'medium'}}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
