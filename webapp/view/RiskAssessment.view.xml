<mvc:View controllerName="com.kaar.ehsmportal.controller.RiskAssessment"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="Risk Assessment" showNavButton="true" navButtonPress="onNavBack">
        <content>
            <Table id="riskTable" inset="false" items="{riskModel>/results}">
                <columns>
                    <Column><Text text="Risk ID" /></Column>
                    <Column><Text text="Plant" /></Column>
                    <Column><Text text="Description" /></Column>
                    <Column><Text text="Category" /></Column>
                    <Column><Text text="Severity" /></Column>
                    <Column><Text text="Mitigation" /></Column>
                    <Column><Text text="Likelihood" /></Column>
                    <Column><Text text="Date" /></Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{riskModel>RiskId}" />
                            <Text text="{riskModel>Plant}" />
                            <Text text="{riskModel>RiskDescription}" />
                            <Text text="{riskModel>RiskCategory}" />
                            <Text text="{riskModel>RiskSeverity}" />
                            <Text text="{riskModel>MitigationMeasures}" />
                            <Text text="{riskModel>Likelihood}" />
                            <Text text="{path: 'riskModel>RiskIdentificationDate', type: 'sap.ui.model.type.Date', formatOptions: {style: 'medium'}}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
